<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #89CFF0 " xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/11.0.2" fx:controller="com.example.demo.controler.AdminController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label fx:id="showMessage" style="-fx-font-size:20" visible="false"/>
    <Label text="Status: Admin" style="-fx-font-size:20"/>
    <Button fx:id="findUser" onAction="#onFindUserClick" style="-fx-background-color: #dcd0ff " text="Find user" />
    <Button fx:id="addAuc" text="Add AUC" onAction="#onAddAucClick" style="-fx-background-color: #dcd0ff "/>
    <Button fx:id="remAuc" text="Remove AUC" onAction="#onRemoveAucClick" style="-fx-background-color: #dcd0ff " visible="false"/>
    <TextField fx:id="userName" promptText="Add or remove AUC" visible="false" />
    <TextField fx:id="costOfItem" promptText="Value of item" visible="false"/>
    <Button fx:id="addthis" text="Confirm" onAction="#onAddThisClick" style="-fx-background-color: #dcd0ff" visible="false"/>
    <Button fx:id="search" onAction="#onSearchClick" style="-fx-background-color: #dcd0ff" text="Search"/>
    <Button fx:id="giveVIP" onAction="#onAddVIPClick" style="-fx-background-color: #dcd0ff" text="Give VIP" visible="false"/>
    <Button fx:id="removeVip" onAction="#onRemoveVIPClick" style="-fx-background-color: #dcd0ff" text="Remove VIP" visible="false"/>
    <Button fx:id="ban" onAction="#onBanClick" style="-fx-background-color: #dcd0ff" text="Ban" visible="false"/>
    <Button fx:id="returnB" onAction="#onReturnButtonClick" style="-fx-background-color: #dcd0ff " text="Log Out" />


</VBox>
